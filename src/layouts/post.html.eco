<%- @partial('header') %>

<%- @getBlock("styles").add(["/css/bootstrap.css", "/css/blog-post.css", "/css/highlight.css"]).toHTML() %>

<%- @partial('nav') %>


<div class="row">
    <div class="col-lg-8">

        <h1><%= @document.title %></h1>
        <p class="lead">
          <a href="javascript:void(0);">Category:</a> 
          <%= @document.category %>
        </p>
        <hr>
        <p>
            <span class="glyphicon glyphicon-time"></span>
            <%= if @document.date == @document.udate then "Posted on" else "Updated on" %>@<%= @formatDate(@document.udate) %>
        </p>
        <hr>

        <%- @content %>

        <%- if @include3rd and not @document.noComm then @partial('comm') %>
    </div>

  <%- @partial('side') %>
</div>
  
<hr>  

<%- @partial('footer') %>
